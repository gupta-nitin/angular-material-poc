<div>
  <h2>Dashboard</h2>
  <mat-table [dataSource]="dataSource" matSort>
    <!-- Contact Name Column -->
    <ng-container matColumnDef="contactName">
      <mat-header-cell *matHeaderCellDef mat-sort-header (click)="showOptions('contactName')" class="header-cell">
        <span>Contact Name</span>
        <span class="options" *ngIf="showOptionsFor === 'contactName'"> <!-- Show options only when clicked -->
          <mat-icon (click)="sortColumn('contactName')">sort</mat-icon>
          <mat-icon (click)="autoSizeColumn('contactName')">aspect_ratio</mat-icon>
          <mat-icon (click)="resetColumn('contactName')">settings_backup_restore</mat-icon>
        </span>
      </mat-header-cell>
      <mat-cell *matCellDef="let row">{{ row.contactName }}</mat-cell>
    </ng-container>

    <!-- Repeat similar ng-container for other columns -->

    <mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
    <mat-row *matRowDef="let row; columns: displayedColumns"></mat-row>
  </mat-table>
